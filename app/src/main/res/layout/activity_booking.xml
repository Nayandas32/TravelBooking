<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c6c5c5"
    tools:context=".booking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="booking"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="100dp"
            />


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="290dp"
            android:layout_height="47dp"
            android:id="@+id/email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Enter your email address"
            android:textColor="#898888"
            />

        <EditText
            android:layout_width="290dp"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/phn"
            android:hint="Enter your phone number"/>

        <EditText
            android:layout_width="290dp"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/place"
            android:hint="Enter where you wan to go"/>


        <EditText
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/live"
            android:hint="Enter where you live"/>

        <EditText
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/pick"
            android:hint="Pickup point"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ImageButton
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bkash"


                />
            <ImageButton
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/dbbl"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:layout_width="290dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/Money"
                android:hint="How you want to pay"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/confirm"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text="Confirm"/>


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:id="@+id/cancle"
                android:text="View Booking"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>